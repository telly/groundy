<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:orientation="vertical">

  <TextView
    android:id="@+id/simple_example_explanation"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/cancel_example_explanation" />

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <Button
      android:id="@+id/queue_blue_task"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="@string/queue_blue_task"
      android:layout_weight="1"/>

    <Button
      android:id="@+id/queue_orange_task"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="@string/queue_orange_task"
      android:layout_weight="1"/>

    <Button
      android:id="@+id/cancel_blue_task"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="@string/cancel_blue_task"
      android:layout_weight="1"/>

    <Button
      android:id="@+id/cancel_orange_task"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:text="@string/cancel_orange_task"
      android:layout_weight="1"/>
  </LinearLayout>


  <ListView
    android:id="@+id/list"
    android:layout_width="match_parent"
    android:layout_height="match_parent" />
</LinearLayout>